<%= render partial: "managers/header", locals: {title: "Кількість обслугованих замовлень співробітниками"} %>
<p class="text-content-header">Дані</p>
<%= form_with url: tables_served_by_a_waitor_managers_path, method: :get, local:true do%>
  <div>
    <div class="form-data-content">
      <label class="text-content-product" for="start_date">з</label>
      <%= date_field_tag :start_date, params[:start_date], class: "form-data"%>
    </div>
  </div>
  <div>
    <div class="form-data-content">
      <label class="text-content-product" for="start_date">по</label>
      <%= date_field_tag :end_date, params[:end_date], class: "form-data" %>
    </div>
  </div>
  <div class="btn-data-search">
    <%= submit_tag "Знайти", class: "btn-data"%>
  </div>
<% end %>

<div class="manager_content">
<% @employees.each do |employee| %>
  <p class="ingredient-dish">Офіціант: <%= employee.full_name %> обслугував замовлень: <%= @group_employee[employee.id] %></p>
<% end %>
</div>